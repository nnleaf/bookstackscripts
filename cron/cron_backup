#!/bin/bash
#     ////     //  ////     //
#    // //    //  // //    //
#   //  //   //  //  //   //
#  //   //  //  //   //  //
# //    // //  //    // //
#//     ////  //     ////
#
# 20200513 - Cron BookStack Backup
#
echo "----------------------------------------------"
echo "--[ Backing up BookStack MariaSQL database ]--"
echo "----------------------------------------------"
mysqldump -u nn nnserver > /home/nn/bookstack_backup/BookStack.sql
echo "--------------------------------------------------------"
echo "--[ Create an archive of BookStack folder for backup ]--"
echo "--------------------------------------------------------"
tar -czf /home/nn/bookstack_backup/bookstack-complete-backup.tar.gz /var/www/html/BookStack
echo "---------------------------------------------------"
echo "--[ Backing up bookstack_backup.tar.gz to Vault ]--"
echo "---------------------------------------------------"
#Mounts vault, copies bookstack_backup with date stamp, cleans up, unmounts
mount -t cifs //192.168.1.111/n1 /mnt/tmp -o credentials=/home/nn/Keys/.vaultpassword
tar -czf /home/nn/bookstack_backup.tar.gz /home/nn/bookstack_backup/
cp -r /home/nn/bookstack_backup.tar.gz /mnt/tmp/Files/NNServer/WEB.BookStack_192.168.1.112/Backup/bookstack_backup_"$(date +%Y-%m-%d_%H%M%S)".tar.gz
rm /home/nn/bookstack_backup.tar.gz
rm -r /home/nn/bookstack_backup/*
umount -t cifs //192.168.1.111/n1